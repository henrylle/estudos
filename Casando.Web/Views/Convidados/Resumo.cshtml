@model IDictionary<string, int>

@{
    ViewBag.Title = "Resumo";
}


<div class="container">
    <div class="heading">
        <div class="col">Nome</div>
        <div class="col">Total </div>
    </div>
    @foreach (var c in Model)
    {
        <div class="table-row">
            <div class="col">@c.Key</div>
            <div class="col">@c.Value</div>
        </div>
    }

</div>


<style>
    .container {
        display: table;
        width: 90%;
        border-collapse: collapse;
    }

    .heading {
        font-weight: bold;
        display: table-row;
        background-color: #C91622;
        text-align: center;
        line-height: 25px;
        font-size: 14px;
        font-family: georgia;
        color: #fff;
    }

    .table-row {
        display: table-row;
        text-align: center;
    }

    .col {
        display: table-cell;
        border: 1px solid #CCC;
    }
</style>


