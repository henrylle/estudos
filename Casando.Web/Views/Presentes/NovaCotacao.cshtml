@model Casando.Web.ViewModels.Presente.NovaCotacaoVM

@{
    ViewBag.Title = "NovaCotação";
}

<h2>NovaCotação</h2>

@using (Html.BeginForm())
{
    @Html.HiddenFor(x => x.PresenteId)

    <div class="page-header">
        <h1>Uma nova cotação para <small>@Model.NomePresente</small></h1>
    </div>

    <div class="form-group">
        <label>Nome da Loja</label>
        @Html.TextBoxFor(m => m.CotacaoPresente.SiteNome, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Site</label>
        @Html.TextBoxFor(m => m.CotacaoPresente.Url, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Valor</label>
        @Html.TextBoxFor(m => m.CotacaoPresente.Valor, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-info">Cadastrar</button>
}





