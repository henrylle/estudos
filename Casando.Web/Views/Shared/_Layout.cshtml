<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewBag.Title - Cazza</title>
        <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
        <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
        <script src="~/Scripts/modernizr-2.6.2.js"></script>
        
        <script src="~/Scripts/jquery.js"></script>
        <script src="~/Scripts/bootstrap.min.js"></script>
        <script src="~/Scripts/knockout.debug.js"></script>
        @*<script src="~/Scripts/ViewModels/ConvidadoViewModel.js"></script>*@
    </head>
    <body>
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Cazza", "Resumo", "Convidados", new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="glyphicon glyphicon-th-list"></span>  Convidados<span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="@Url.Action("Index","Convidados")">Visualizar</a></li>
                                <li><a href="@Url.Action("Cadastrar","Convidados")">Cadastrar</a></li>
                                <li><a href="@Url.Action("Resumo","Convidados")">Resumo dos Convites</a></li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="glyphicon glyphicon-gift"></span> Presentes<span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="@Url.Action("Index","Presentes")">Visualizar</a></li>
                                <li><a href="@Url.Action("Cadastrar","Presentes")">Cadastrar</a></li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="glyphicon glyphicon-usd"></span> Finanças<span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu"> 
                                <li><a href="@Url.Action("Index","Presentes")">Dashboard</a></li>
                                <li><a href="@Url.Action("Cadastrar","Presentes")">Cadastrar</a></li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="glyphicon glyphicon-phone-alt"></span>  Contatos<span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="@Url.Action("Index","Presentes")">Visualizar</a></li>
                                <li><a href="@Url.Action("Cadastrar","Presentes")">Cadastrar</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Cazza</p>
            </footer>
        </div>
    </body>
</html>

<script>
    $.ready(function() {
        $().dropdown('toggle');
    });
</script>