<table class="table table-striped">
    <thead>
        <tr>
            <td></td>
            <td>Nome</td>
            <td>Endereço</td>
            <td style="text-align: center">Quantidade de Exibíveis</td>
        </tr>
    </thead>
    <tbody data-bind="foreach: Convidados">
        <tr>
            <td><button class="btn-sm btn-info" data-toggle="modal" data-target="#editModal" data-bind="click: function(){ $root.editar(this.Id()) }">Editar</button></td>
            <td style="display: none" data-bind="text: Id"></td>
            <td data-bind="text: Nome"></td>
            <td data-bind="text: Endereco"></td>
            <td data-bind="text: NumeroDeExibiveis" style="text-align: center"></td>
        </tr>
    </tbody>
</table>

